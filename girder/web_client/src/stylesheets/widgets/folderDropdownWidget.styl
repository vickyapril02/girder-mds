.g-folder-dropdown-container
  border 1px solid #ddd
  border-radius 4px
  background #fff
  margin 10px 0

  .g-folder-dropdown-header
    background #f8f9fa
    padding 10px 15px
    border-bottom 1px solid #ddd
    display flex
    justify-content space-between
    align-items center

    .g-folder-dropdown-title
      font-size 16px
      font-weight 600
      color #333
      margin 0

    .g-folder-dropdown-actions
      display flex
      gap 10px
      align-items center

      .g-folder-dropdown-check-all
        display flex
        align-items center
        gap 5px
        font-size 14px
        color #666
        cursor pointer
        margin 0

        input[type="checkbox"]
          margin 0

  .g-folder-dropdown-content
    max-height 400px
    overflow-y auto
    padding 5px 0

  .g-folder-dropdown-item
    border-bottom 1px solid #f0f0f0

    &:last-child
      border-bottom none

  .g-folder-dropdown-row
    display flex
    align-items center
    padding 8px 15px
    transition background-color 0.2s ease

    &:hover
      background-color #f8f9fa

  .g-folder-dropdown-toggle
    width 20px
    height 20px
    padding 0
    border none
    background none
    color #666
    cursor pointer
    display flex
    align-items center
    justify-content center
    margin-right 8px
    transition transform 0.2s ease

    &:hover
      color #333

    &.expanded
      transform rotate(90deg)

    &.collapsed
      transform rotate(0deg)

    i
      font-size 12px

  .g-folder-dropdown-spacer
    width 20px
    height 20px
    margin-right 8px

  .g-folder-dropdown-checkbox
    margin-right 8px

  .g-folder-dropdown-link
    display flex
    align-items center
    gap 8px
    color #333
    text-decoration none
    flex 1
    padding 4px 0

    &:hover
      color #007bff
      text-decoration none

    i
      color #666
      font-size 14px

    .g-folder-dropdown-name
      font-size 14px

  .g-folder-dropdown-children
    background #fafafa
    border-left 2px solid #e9ecef

  .g-folder-dropdown-child
    border-bottom 1px solid #f0f0f0

    &:last-child
      border-bottom none

  .g-folder-dropdown-empty
    padding 20px
    text-align center
    color #666
    font-style italic

  .g-folder-dropdown-loading,
  .g-folder-dropdown-error
    padding 20px
    text-align center
    color #666

  .g-folder-dropdown-error
    color #dc3545

// Dark theme support
@media (prefers-color-scheme: dark)
  .g-folder-dropdown-container
    background #2d3748
    border-color #4a5568

    .g-folder-dropdown-header
      background #4a5568
      border-color #4a5568

      .g-folder-dropdown-title
        color #e2e8f0

      .g-folder-dropdown-check-all
        color #a0aec0

    .g-folder-dropdown-content
      background #2d3748

    .g-folder-dropdown-row
      &:hover
        background-color #4a5568

    .g-folder-dropdown-link
      color #e2e8f0

      &:hover
        color #63b3ed

      i
        color #a0aec0

    .g-folder-dropdown-children
      background #1a202c
      border-color #4a5568

    .g-folder-dropdown-item,
    .g-folder-dropdown-child
      border-color #4a5568

    .g-folder-dropdown-empty,
    .g-folder-dropdown-loading
      color #a0aec0

    .g-folder-dropdown-error
      color #fc8181
